             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoZhiMusic_Ultimate.Views.Home_Page.Home_Sidebar_Panel.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150"
             UseLayoutRounding="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" 
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave"
