                <ImageBrush ImageSource="/MoZhiMusic_Ultimate;component/Views/Home_Page/Home_Sidebar_Panel/UI_Image/乐谱绘制与演奏.png"/>
            </TextBlock.Background>
        </TextBlock>
        <TextBlock Margin="40,5,0,5" Text="乐谱绘奏 " Foreground="#FFFFFF" FontSize="13.5" Padding="0,1,0,0" 
